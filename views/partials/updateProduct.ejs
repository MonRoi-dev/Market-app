<form method="post" action="/admin/product/<%= data.id %>?_method=PUT">
    <div class="container">
      <div class="row">
              <h5 class="center-align"><b>Update product</b></h5>
              <div class="row">
                <div class="input-field col s6">
                  <input
                    id="name"
                    name="name"
                    type="text"
                    class="validate"
                    value="<%= data.name %>"
                  />
                  <label for="name">Name</label>
                </div>
                <div class="input-field col s6">
                  <input
                    id="price"
                    name="price"
                    type="text"
                    class="validate"
                    value="<%= data.price %>"
                  />
                  <label for="price">Price (only digits)</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input
                    id="image"
                    name="image"
                    type="url"
                    class="validate"
                    value="<%= data.image %>"
                  />
                  <label for="image">Image link (URL)</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <textarea
                    id="info"
                    name="info"
                    type="text"
                    class="materialize-textarea"
                  ><%= data.info %></textarea>
                  <label for="info">Info</label>
                </div>
              </div>
            </div>
            <div class="card-action center-align">
              <button
                type="submit"
                class="btn waves-effect waves-light hoverable"
              >
                Update
              </button>
            </div>
          </div>
</form>